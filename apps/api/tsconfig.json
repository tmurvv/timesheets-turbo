{
  "compilerOptions": {
    "types": ["node", "dotenv/config"],
    "baseUrl": ".",
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "ESNext",
    "outDir": "./dist",
    "moduleResolution": "node"
  },
  "files": [
    ".env"
  ],
  "include": ["./src"],
}
